<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
 <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
  <div class="container">
    <%- include('partials/header.ejs') %>
    <div class="container">
      <div class="list-group-item">
          <% authors.map((author) => { %>
          <div class="d-flex">
            <a href="/authors/<%= author.id %>/books" class="list-group-item-action d-flex gap-3 py-3" aria-current="true">
              <img src="https://simg.nicepng.com/png/small/202-2022264_usuario-annimo-usuario-annimo-user-icon-png-transparent.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
              <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                  <h6 class="mb-0"><%= author.name %></h6>
                  <p class="mb-0 opacity-75">
                    <%= author.country %>
                  </p>
                </div>
              </div>
            </a>
              <div class="d-flex justify-content-between">
                <form class="me-2" action="/authors/delete/<%=author.id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-link text-reset p-0 border-0">
                    <i class="bi bi-trash3"></i>
                  </button>
                </form>
                <a href="/authors/edit/<%=author.id %>" class="btn btn-link text-reset p-0 border-0">
                  <i class="bi bi-pencil"></i>
                </a>
              </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>


  <%- include('partials/footer.ejs') %>
  </div>
</body>
</html>