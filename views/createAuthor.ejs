<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
  <div class="container">
  <%- include('partials/header.ejs') %>
  <section class="vh-100" style="background-color: #2779e2;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-9">
          <h1 class="text-white mb-4">Create author</h1>
          <form action="/authors/create" method="POST"  class="card" style="border-radius: 15px;">
              <div class="card-body">
              <%- include('partials/formCreate.ejs') %>
                <div class="row align-items-center py-3">
                  <div class="col-md-3 ps-5">
                    <h6 class="mb-0">Book</h6>
                  </div>
                <div class="col-md-6 pe-5">
                  <select id="form-select" class="form-select" name="title">
                    <% if(locals.book) { %>
                    <% {book.forEach(element => {%>
                     <option value="<%= element.title %>" 
                      <%= (locals.oldData && locals.oldData.book === element.title) ? 'selected' : '' %> >
                      <%= element.title %>
                    </option>
                   <% })} %>
                  <% } %>
                  </select> 
                </div>
                <button type="button" id="plus" class=" col-md-2 btn btn-primary">+</button>
                <div id="select-container">

                </div>
              </div>
              <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
                <a href="/books" >
                  <button type="button" class="btn btn-primary btn-lg">Cancel</button>
                </a>
              </div>
          </form>
          </div>
      </div>
    </div>
  </section>
</div>
<%- include('partials/footer.ejs') %>
</body>
<script src="/scripts/scriptSelect.js"></script>
</html>